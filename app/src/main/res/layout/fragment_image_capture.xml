<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentframeLayout"
    tools:context=".ui.image.ImageCaptureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/id_capture_image"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/ic_capture_image"/>
        <TextView
            android:id="@+id/id_capture_image_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/imgcapture"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/id_imageview_Layout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_recycler_img_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>